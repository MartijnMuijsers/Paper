 import java.util.Set; // Paper
 import java.util.UUID;
 import com.destroystokyo.paper.ClientOption; // Paper
@@ -1998,6 +1999,51 @@ public interface Player extends HumanEntity, Conversable, OfflinePlayer, PluginM
