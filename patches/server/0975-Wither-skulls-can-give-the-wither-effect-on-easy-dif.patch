diff --git a/src/main/java/io/papermc/paper/configuration/WorldConfiguration.java b/src/main/java/io/papermc/paper/configuration/WorldConfiguration.java
index c76cfcf5282537e9bb45d8350a9be3581da1eca5..45471b395b57a73250150f8c21f755b00b8420ba 100644
--- a/src/main/java/io/papermc/paper/configuration/WorldConfiguration.java
+++ b/src/main/java/io/papermc/paper/configuration/WorldConfiguration.java
@@ -72,6 +72,7 @@ public class WorldConfiguration extends ConfigurationPart {
         public boolean zombieReinforcementsOnAllDifficulties = false; // Martijn - zombies can call for reinforcements on all difficulties
         public boolean raidsAreAlwaysHard = false; // Martijn - raids are always hard
         public boolean caveSpidersHavePoisonOnEasyDifficulty = false; // Martijn - cave spiders have poison on easy difficulty
+        public boolean witherEffectFromWitherSkullsOnEasyDifficulty = false; // Martijn - wither effect from wither skulls on easy difficulty
     }
 
     // Martijn end - difficulty changes
diff --git a/src/main/java/net/minecraft/world/entity/projectile/WitherSkull.java b/src/main/java/net/minecraft/world/entity/projectile/WitherSkull.java
index 2867e841e73a3edfdeb83af9d96e0d0cd4116a68..675de51295414d5b53458289ecda66d6dcd20593 100644
--- a/src/main/java/net/minecraft/world/entity/projectile/WitherSkull.java
+++ b/src/main/java/net/minecraft/world/entity/projectile/WitherSkull.java
@@ -75,7 +75,7 @@ public class WitherSkull extends AbstractHurtingProjectile {
             if (flag && entity instanceof LivingEntity) {
                 byte b0 = 0;
 
-                if (this.level.getDifficulty() == Difficulty.NORMAL) {
+                if (this.level.getDifficulty() == Difficulty.NORMAL || (this.level.getDifficulty() == Difficulty.EASY && this.level.paperConfig().difficultyChanges.witherEffectFromWitherSkullsOnEasyDifficulty)) { // Martijn - wither effect from wither skulls on easy difficulty
                     b0 = 10;
                 } else if (this.level.getDifficulty() == Difficulty.HARD) {
                     b0 = 40;
